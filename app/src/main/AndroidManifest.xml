<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ozh.android.recycler.decorator.sample">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ru.ozh.android.recycler.decorator.sample.MainActivityView"
            android:screenOrientation="unspecified"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ru.ozh.android.recycler.decorator.sample.list.LinearDecoratorActivityView"
            android:screenOrientation="unspecified"
            android:exported="false"/>
        <activity
            android:name="ru.ozh.android.recycler.decorator.sample.list.SdkLinearDecoratorActivityView"
            android:screenOrientation="unspecified"
            android:exported="false"/>

        <activity
            android:name="ru.ozh.android.recycler.decorator.sample.chat.ChatActivityView"
            android:screenOrientation="unspecified"
            android:exported="false"/>

        <activity
            android:name="ru.ozh.android.recycler.decorator.sample.pager.CarouselDecoratorActivityView"
            android:screenOrientation="unspecified"
            android:exported="false"/>

        <activity
            android:name="ru.ozh.android.recycler.decorator.sample.timeline.TimeLineActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
    </application>

</manifest>